<div class="isolate">
  <div class="bg-white dark:bg-zinc-900">
    <%= render AppLayout::TopbarComponent.new(current_page: current_page, pages: pages) do |topbar| %>
      <% topbar.with_links do %>
        <% topbar_links.each do |link| %>
          <%= link %>
        <% end %>
      <% end %>
    <% end %>
    <div class="px-6 lg:px-8">
      <div class="mx-auto max-w-xl lg:max-w-7xl">
        <div class="mx-auto flex max-w-xl items-start gap-x-12 lg:max-w-7xl">
          <%= render AppLayout::SidebarComponent.new(site: site, current_page: current_page, pages: pages) %>

          <main class="min-w-0 flex-1 gap-x-12 pt-8 pb-16 lg:pt-12">
            <% if current_page.parent.present? && current_page.parent.request_path != '/' %>
              <p class="text-xs mb-2 uppercase text-zinc-500 dark:text-zinc-400">
                <%= current_page.parent.data.fetch("title", File.basename(current_page.parent.request_path)) %>
              </p>
            <% end %>

            <div class="prose dark:prose-invert !max-w-none">
              <%= content %>
            </div>

            <% if edit_page? %>
              <div class="mt-12 flex justify-end">
              <a href="https://github.com/maglevhq/maglev-documentation/blob/main/pages<%= current_page.request_path %>.html.md"
                 target="_blank"
                 rel="noopener"
                 class="inline-flex items-center gap-2 rounded-full border border-zinc-300 dark:border-zinc-700 px-4 py-2 text-xs font-medium text-zinc-600 dark:text-zinc-300 bg-white dark:bg-zinc-900 hover:bg-zinc-100 dark:hover:bg-zinc-800 transition"
              >
                <svg viewBox="0 0 16 16" fill="currentColor" class="w-4 h-4" aria-hidden="true">
                  <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.01.08-2.11 0 0 .67-.21 2.2.82a7.65 7.65 0 0 1 2-.27c.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.91.08 2.11.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.19 0 .21.15.46.55.38A8.013 8.013 0 0 0 16 8c0-4.42-3.58-8-8-8z"/>
                </svg>
                  Edit this page
                </a>
              </div>
            <% end %>
          </main>

          <%= render AppLayout::PageNavComponent.new(page_content: content) %>
        </div>
      </div>
    </div>
  </div>

  <div class="block lg:hidden space-x-2 flex justify-center items-center py-4">
    <% topbar_links.each do |link| %>
      <div>
        <%= link %>
        <% if link != topbar_links.last %><span>/</span><% end %>
      </div>
    <% end %>
  </div>
</div>
